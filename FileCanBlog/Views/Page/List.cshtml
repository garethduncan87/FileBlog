@model IEnumerable<FileCanBlog.ViewModels.PageViewModel>

<ul>
    @if (Model != null && Model.Count() != 0)
    {
        foreach (var item in Model)
        {
            <li>
                <a href="@Url.Action("Index", "Page", new { section = item.page.Section, title = item.page.TitleUrlFriendly })">

                    <div>
                        <h2>@Html.DisplayFor(m => item.page.Title)</h2>
                        <p>@Html.DisplayFor(m => item.page.Description)</p>
                    </div>
                </a>
            </li>
        }
    }
    else
    {
        <li>No pages</li>
    }
</ul>